def Bacteria(t):
    if t == 0:
        return 50000
    else:
        return 3*Bacteria(t-1)
        
print(Bacteria(2))

def Bacteria2(t):
    return 50000*3**t

print(Bacteria(2))

def Bacteria3(t):
    resultado = 50000
    contador = 0
    
    while contador < t:
        resultado *= 3
        contador += 1
    
    return resultado
        
print(Bacteria3(2))
